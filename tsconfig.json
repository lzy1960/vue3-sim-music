{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "@": [
        "./src"
      ]
    },
    "types": [
      "element-plus/global",
      "node"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
